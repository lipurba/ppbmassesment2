<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orange">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/potomarkes"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/markes" />

        <TextView
            android:id="@+id/namarider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME = MARC MARQUEZ"
            android:layout_marginTop="70sp"
            android:layout_marginLeft="160dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WORKSHOP SERVICE"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="160dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:id="@+id/contact_serviceman"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/contact_serviceman"
            android:backgroundTint="@color/cream"
            app:cardCornerRadius="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVICEMAN RATING"
                android:layout_marginLeft="80dp"
                android:id="@+id/L_text"
                android:textColor="@color/black"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L_rating"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                android:numStars="5"
                android:rating="5.0"
                android:progressTint="@color/orange"
                android:isIndicator="true"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>