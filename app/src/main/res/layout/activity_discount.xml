<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discount"
    android:background="@color/orange">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:src="@drawable/back"
        android:layout_margin="10sp"
        android:id="@+id/back3"/>

    <ImageView
        android:layout_width="121dp"
        android:layout_height="122dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/gambar1"
        android:id="@+id/D_img_1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/cream"
        android:layout_below="@id/D_img_1"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/D_crd_1"
        android:layout_below="@id/D_img_1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/cream"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gambar3">

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:orientation="horizontal"
        android:layout_below="@id/D_crd_1"
        android:id="@+id/D_crd_2">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/cream"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="@drawable/gambar11"
                >

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/D_crd_2"
        android:layout_marginTop="-300dp"
        android:layout_marginLeft="210dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/cream">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="@drawable/gambar12">

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



</RelativeLayout>